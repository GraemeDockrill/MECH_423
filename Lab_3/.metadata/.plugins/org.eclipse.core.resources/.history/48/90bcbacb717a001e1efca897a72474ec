#ifndef STEPPER_LUT_H_
#define STEPPER_LUT_H_

#define OUTMOD_7               (7*0x20u)      /* PWM output mode: 7 - PWM reset/set */
#define OUTMOD_5               (5*0x20u)      /* PWM output mode: 5 - Reset */

// Whole Stepping LUT
static const unsigned int outputA1_WS[4] =
{
 OUTMOD_7, OUTMOD_5, OUTMOD_5, OUTMOD_5
};
static const unsigned int outputA2_WS[4] =
{
     OUTMOD_5, OUTMOD_5, OUTMOD_7, OUTMOD_5
};
static const unsigned int outputB1_WS[4] =
{
     OUTMOD_5, OUTMOD_7, OUTMOD_5, OUTMOD_5
};
static const unsigned int outputB2_WS[4] =
{
     OUTMOD_5, OUTMOD_5, OUTMOD_5, OUTMOD_7
};

// Half stepping LUT:
static const unsigned int outputA1_HS[8] =
{
     OUTMOD_7, OUTMOD_7, OUTMOD_5, OUTMOD_5, OUTMOD_5, OUTMOD_5, OUTMOD_5, OUTMOD_7
};
static const unsigned int outputA2_HS[8] =
{
     OUTMOD_5, OUTMOD_5, OUTMOD_5, OUTMOD_7, OUTMOD_7, OUTMOD_7, OUTMOD_5, OUTMOD_5
};
static const unsigned int outputB1_HS[8] =
{
     OUTMOD_5, OUTMOD_7, OUTMOD_7, OUTMOD_7, OUTMOD_5, OUTMOD_5, OUTMOD_5, OUTMOD_5
};
static const unsigned int outputB2_HS[8] =
{
     OUTMOD_5, OUTMOD_5, OUTMOD_5, OUTMOD_5, OUTMOD_5, OUTMOD_7, OUTMOD_7, OUTMOD_7
};



#endif /* STEPPER_LUT_H_ */
